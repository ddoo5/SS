<!-- items example -->
<div class="BlockForItems">
    <div class="viewItems">
        <div class="Arrow">
            <i class="fa-solid fa-arrow-right"></i>
        </div>
        <div class="linkOnOrder">
            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">
                <p class="MaintextView">View products</p>
            </a>
        </div>
    </div>

    <hr/>
    
    <div class="Items">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var product in Model)
            {
                if (product.Name == NameList.dishwasher.ToString())
                    useLink = "https://ars.repair/wp-content/uploads/2020/06/dishwasher.jpg";
                if (product.Name == NameList.Iphone.ToString())
                    useLink = "https://priceinall.com/wp-content/uploads/2020/10/apple-iphone-12-4.jpg";
                if (product.Name == NameList.MSI.ToString())
                    useLink = "https://global-img.gamergen.com/msi-tridentx_0190000000909316.png";
                if (product.Name == NameList.MoonlightSonata_Beethoven_in_B_minor.ToString())
                    useLink = "https://avatars.yandex.net/get-music-content/99892/4b063d26.a.5002278-1/300x300";
                if (product.Name == NameList.GTX_1080.ToString())
                    useLink = "https://i.ebayimg.com/images/g/YiAAAOSw2KRiJ3i4/s-l400.jpg";
                if (product.Name == NameList.Samsung.ToString())
                    useLink = "https://unlogo-img.tvc-mall.com/logo/101217574G.jpg";
                if (product.Name == NameList.Scarlett_comfort.ToString())
                    useLink = "https://tehnoteca.ru/img/693/692278/scarlett_sc_ah986e03_1.jpg";
                if (product.Name == NameList.Tesla.ToString())
                    useLink = "https://www.ixbt.com/img/n1/news/2021/2/4/2021-Tesla-Model-3_large.jpg";
                if (product.Name == NameList.Sony_ps4.ToString())
                    useLink = "https://i.ebayimg.com/images/g/irMAAOSwFl5Zjx53/s-l1600.jpg";

                <div class="col">
                    <div class="card h-40">
                        <img src="@useLink" class="card-img-top" alt="item">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name.ToUpper()</h5>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">@product.Price â‚½</small>
                        </div>
                    </div>
