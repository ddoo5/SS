@model List<WebApplication1.DB.Models.Product>

@{
    ViewData["Title"] = "Samsung";
    
    Random rnd = new();
    string useLink = "";
    string link1 = "https://ae04.alicdn.com/kf/Hec3e58dfced94ac2a291584973f96035y.jpg";
    string link2 = "https://unlogo-img.tvc-mall.com/logo/101217574G.jpg";
    string link3 = "https://printofon.ru/components/com_jshopping/files/img_products/silikonovyj-gradientnyj-steklyannyj-chehol-dlya-samsung-galaxy-s20-ultra-zolotoj-rozovyj7.jpg";
    string link4 = "https://frankfurt.apollo.olxcdn.com/v1/files/hf1aobx8htgl3-KZ/image%3Bs=1201x900";
}


<!-- List of items -->
<div>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var product in Model)
        {
            if (rnd.Next(1, 5) == 1)
                useLink = link1;
            if (rnd.Next(1, 5) == 2)
                useLink = link2;
            if (rnd.Next(1, 5) == 3)
                useLink = link3;
            if (rnd.Next(1, 5) == 4)
                useLink = link4;
            
            <div class="col">
                <div class="card h-40">
                    <img src="@useLink" class="card-img-top" alt="dishwash">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name.ToUpper()</h5>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index">
                                        <button class="bttn-default bttn-lg bttn-primary">Buy</button>
                                    </a>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">@product.Price â‚½</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<!-- Message with count -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <div class="rounded me-2">
                <i class="fa-solid fa-code"></i>
            </div>
            <strong class="me-auto">DD</strong>
            <small>@DateTime.UtcNow.ToString("t")</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Total count of items: @Model.Count
        </div>
    </div>
</div>


<!-- Script for message -->
<script>
const toastLiveExample = document.getElementById('liveToast')
setTimeout(function(){
    const toast = new bootstrap.Toast(toastLiveExample)
    toast.show()
}, 3000);
</script>