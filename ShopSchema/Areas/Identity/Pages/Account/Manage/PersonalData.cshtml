@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong style="color: red">Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <div id="registerSubmitButton">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="bttn-fill bttn-md bttn-success" type="submit">Download</button>
            </form>
            <p>
                <a id="delete" asp-page="DeletePersonalData">            
                    <button class="bttn-fill bttn-md bttn-danger">Delete</button>
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
